import javafx.scene.input.MouseButton;
import javafx.scene.input.MouseEvent;

public class MovingBarSettingController {
	@FXML
    private ChoiceBox<String> frontScenarioChoicebox;

    @FXML
    private ColorPicker frontDisplayColor;

    @FXML
